{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "sku": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true,
      "default": 1
    },
    "unit": {
      "type": "string",
      "default": "шт",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "wholesale": {
      "type": "boolean",
      "default": false
    },
    "wholesale_price": {
      "type": "decimal",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "wholesale"
            },
            true
          ]
        }
      }
    },
    "wholesale_count": {
      "type": "integer",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "wholesale"
            },
            true
          ]
        }
      }
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    }
  }
}
